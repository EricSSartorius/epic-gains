@import './styl/pages/_layouts.import'
@import './styl/utils/_type.import'

normalize-css();

html
  box-sizing: border-box
  height 100%

*,
*:before,
*:after
  box-sizing: inherit

body
  background: colors.well
  height 100vh
  padding-top: $headerHeight
  > div, > div > div
      height 100vh

header
  background: colors.main
  box-shadow $shadow
  fixed top left
  height $headerHeight
  padding $padding * 2
  transition: all speed.med ease
  width 100%
  z-index: z.nav
  display flex
  justify-content space-between
  align-items center
  .branding
    color: textColor.white
    text-transform uppercase
  nav
    ul
      margin 0
      li
        display inline-block
        margin 0 $margins
        a
          color: textColor.highlight

/* BUTTONS */
button,
.button
  background: colors.button
  border none
  border-radius $rounded
  color: textColor.main
  padding $padding
  margin $margins
  trans()
  &:hover
    background: colors.darken
  &.add
    background: colors.add
    color: textColor.white
  &.icon
    background none

/* LOGIN */
#login-buttons
  .login-button
    @extend .button
  #login-dropdown-list
    border none
    border-radius $rounded
    box-shadow: $shadow
    margin 0
    left auto
    right 0
    top 15px

/* INPUTS */
.input
  border none
  background: colors.white
  border-radius $rounded  
  color: textColor.input
  margin $margins 0 $margins * 2
  padding $padding
  &::placeholder
    color: textColor.main
  &:focus
    outline none

form
  label
    color: textColor.main
    margin 0
  input[type=text],
  input[type=number]
    @extend .input
  select, 
  textarea
    background-color: colors.white
    border-radius $rounded 
    color: textColor.input 
    margin $margins 0 $margins * 2
    &:focus
      outline none
  select 
    // padding $padding
    height $padding * 5
  textarea
    padding $padding * 2 $padding
    width 50%

.searchbar
  input
    //

/* UTILS */
.loading
  margin-top $margins * 5
  text-align center


