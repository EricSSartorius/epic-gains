@import './styl/pages/_layouts.import'
@import './styl/utils/_type.import'

normalize-css();

html
  box-sizing: border-box
  height 100%

*,
*:before,
*:after
  box-sizing: inherit

body
  background: colors.well
  height 100vh
  padding-top: $headerHeight
  > div, > div > div
      height 100vh

header
  background: colors.main
  box-shadow $shadow
  fixed top left
  height $headerHeight
  padding $padding * 2
  transition: all speed.med ease
  width 100%
  z-index: z.nav
  display flex
  justify-content space-between
  align-items center
  .branding
    color: textColor.white
    text-transform uppercase
  nav
    ul
      margin 0
      li
        display inline-block
        margin 0 $margins
        a
          color: textColor.highlight

/* BUTTONS */
button,
.button
  background: colors.button
  border none
  border-radius $rounded
  color: textColor.button
  padding $padding
  trans()
  &:hover
    background: colors.darken
    color: textColor.main
  &.add
    background: colors.add
    color: textColor.white
  &.icon
    background none
  &.delete
    background: colors.danger
    color: textColor.white

/* LOGIN */
#login-buttons
  .login-button
    @extend .button
  #login-dropdown-list
    font-family primaryFont
    border none
    border-radius $rounded
    box-shadow: $shadow
    margin 0
    left auto
    right 0
    top 15px

/* INPUTS */


.searchbar
  input
    //

/* UTILS */
.loading
  margin-top $margins * 5
  text-align center


