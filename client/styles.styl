@import 'nib'
@import './styl/pages/_layouts.import'
@import './styl/utils/_type.import'

normalize-css();

html
  box-sizing: border-box
  height 100%

*
*:before
*:after
  box-sizing: inherit

body
  height 100%
  padding-top: $headHeight
  > div, > div > div
      height 100%

// .page-wrapper
//   min-height: 100%

header
  background green
  box-shadow $shadow
  fixed top left
  height $headHeight
  padding $padding * 2 $padding
  transition all 0.3s ease
  width 100%
  z-index: z.nav
  nav
    float right
    ul
      margin 0
    li
        display inline-block
        margin 0 $margins
  clearfix();

footer
  background gray
  transition all 0.3s ease
  width 100%

/* BUTTONS */
button
.button
  background green
  border none
  border-radius $rounded
  color: textColor.button
  trans()
  &:hover
    background green - 20

/* LOGIN */
#login-buttons
  .login-button
    @extend .button
  #login-dropdown-list
    border none
    border-radius 0
    box-shadow: $shadow
    margin $margins * 0
    left auto
    right 0
    top 15px
    .login-close-text
      float right

.popup
  background-color gray
  box-shadow $shadow
  left 50%
  position fixed
  top 50%
  transform translateY(-50%) translate(-50%)
  width 80%
  z-index: z.modal
  .delete
    float right
    margin $margins
