@import 'nib'
@import '../_vars.import'
@import '../_easings.import'
@import '../_funcs.import'

/* MAINLAYOUT */
.main-layout
  margin $margins * 6 auto
  max-width $med
  min-height 100vh
  padding $margins

/* Circuit Form */
.circuit-form
  display flex
  justify-content space-between

/* WORKOUTS */
.workout-layout
  .workout, .rest
    background $gray
    border-radius $rounded
    box-shadow $shadow
    margin $margins 0
    padding $padding * 2
