@import 'nib'
@import '../_vars.import'
@import '../_easings.import'
@import '../_funcs.import'

/* MAINLAYOUT */
.main-layout
  margin $margins * 6 auto
  padding $margins
  max-width $med

/* Circuit Form */
.circuit-form
  display flex
  justify-content space-between

/* WORKOUTS */
.workout-layout
  .create-new
  .workout
    border 1px solid gray
    box-shadow $shadow
    margin $margins 0
    padding $padding * 2
    text-align center
    p
      a
        color: textColor.linkInverse
