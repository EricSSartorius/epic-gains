@import 'nib'
@import '../_vars.import'
@import '../_easings.import'
@import '../_funcs.import'

allHeadings = 'h1,h2,h3,h4,h5,h6'

p,
label,
{ allHeadings }
  font-family primaryFont

p
  color: textColor.main
  font-family primaryFont
  font-size $baseText
  line-height 1.5

{ allHeadings }
  color: textColor.white

a,
.link
  color: textColor.link
  text-decoration none

i
  trans()

i.white
  color: textColor.white

ol
ul
  list-style none
  padding-left 0

