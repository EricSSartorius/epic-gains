.input
  border none
  background: colors.white
  border-radius $rounded  
  color: textColor.input
  display block
  margin $margins 0
  padding $padding
  &::placeholder
    color: textColor.main
  &:focus
    outline none

form
  label
    color: textColor.main
    display block
    margin 0
  input[type=text]
  input[type="email"]
  input[type="password"]
  input[type="tel"]
  input[type="number"]
  select, 
  textarea
    @extend .input
    width 100%
    margin $margins 0 $margins * 3
  select 
    height $padding * 5
  textarea
    padding $padding * 2 $padding
